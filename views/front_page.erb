<div id="step-one" class="step<% if username; %> completed<% end %>">
	<div class="num">1</div>
		<% if username %>
			<p>Login with Twitter</p>
      <p>(you are logged in as <%= username_link %>)</p>
		<% else %>
			<p><a class="twitterlogin">Login</a> with Twitter</p>
		<% end %>
</div>
<div id="step-two" class="step">
	<div class="num">2</div>
	<p><a id="upload-browse">Upload</a> your built .html file</p>
  <div id="drop-area"></div>
</div>
<div id="step-three" class="step">
	<div class="num">3</div>
  <p>Name your game</p>
  <form id="publish-form" action="/publish" method="POST">
    <p><input id="publish-name" type="text" name="name"/></p>
  </form>

  <a id="publish-submit">publish!</a>
</div>
