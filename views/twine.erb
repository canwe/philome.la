<p>
  <h2 id="title"><%= sanitize @twine.name %></h2>
  <span id="byline">by <a href="/<%= @user.name %>"><%= "@#{@user.name}" %></a></span>
</p>

<p>
  <a id="play" href="/<%= @user.name %>/<%= @twine.slug %>/play">PLAY</a>
</p>

<p>
  played <%= @twine.plays %> times &bull;
  <span id="tweet-button">
    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-text="&quot;<%= @twine.name %>&quot;, by <%= "@#{@user.name}" %>">Tweet</a>
  </span>
</p>

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>